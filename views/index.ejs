<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (events.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Event Name</th>
                        <th scope="col">Event Date</th>
                        <th scope="col">Event Location</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% events.forEach((event, index) => { %>
                        <tr>
                            <th scope="row"><%= event.id %></th>
                            <!-- <td><img src="/assets/img/<%= player.image %>" class="rounded-circle player-img" alt=""></td> -->
                            <td><%= event.event_name %></td>
                            <td><%= event.event_date %></td>
                            <td><%= event.event_location %></td>
                            <td>
                                <a href="/edit/<%= event.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= event.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No events found. Go <a href="/add" >here</a> to add events.</p>
        <% } %>
    </div>
</div>
</body>
</html>